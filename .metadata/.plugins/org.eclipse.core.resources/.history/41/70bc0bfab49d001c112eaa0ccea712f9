import java.util.Random;
import java.util.Scanner;
import java.util.random.*;

public class Bicicleta {
	// Atributos
	private long id;
	private String marca;
	private boolean status;
	
	private int totalBicicletas =  50;
	Scanner ler = new Scanner(System.in);
	Random gerador = new Random();
	// Metodo Construtor de Bicicleta
	public Bicicleta(int id, String marca, boolean status) {
		
	}
	// Getters e Setters
	public long getID() {
		return id;
	}

	public void setID(int id) {
		this.id = id;
	}

	public String getMarca() {
		return marca;
	}

	public void setMarca(String marca) {
		this.marca = marca;
	}

	public boolean isStatus() {
		return status;
	}

	public void setStatus(boolean status) {
		this.status = status;
	}

	// Metodos
	public void cadastrar(Bicicleta bicicleta[]) {
		int i;
		
		// Setando id primário randomicamente 
		long tmpLong;
		boolean existe;
		
		do {
			existe = false;
			tmpLong = gerador.nextLong();
			for(i = 0; i < totalBicicletas; i++) {
				if ( tmpLong == bicicleta[i].id )
				{
					existe = true;
					break;
				}
			}			
		}while(existe);
		
		// Definindo marca da bicicleta
		String tmpString;
		
		this.id = tmpLong; // Gerar long aleatorio e verificar se este ja existe
		// Verificacao
		
		this.marca = marca;
		this.status = status;
	}
	public void deletar() {
		
	}
	public void buscar() {
		
	}
}
